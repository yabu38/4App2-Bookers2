<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= book.user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>

<h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>